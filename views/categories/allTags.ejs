<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %> <%- include('../partials/nav.ejs')
    %>

    <div class="content">
      <h2 class="page-title">Find a book by tags</h2>
      <div class="content-box">
        <% tags.forEach((tag) => { %>
          <div class="tag-container">
            <a class="tagLink" href="/categories/tagDetails/<%= tag %>">
              <%= tag %> 
            </a>
          </div>
        <% }) %> 
      </div>
    </div>
  </body>
</html>