<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head.ejs') %>
  <body>
    <%- include('../partials/header.ejs') %> <%- include('../partials/nav.ejs')
    %>
    <div class="content-container">
      <h1 class="create-blog-title">Add a new entry below!</h1>
      <form action="/blogs" method="POST" class="content">
        <div class="create-blog-form">
          <div class="input-cluster">
            <div class="form-row">
              <label for="book-title" class="label">Book Title</label>
              <input
                id="book-title"
                name="book-title"
                type="text"
                placeholder="Books, books, books..."
                required="required"
              />
            </div>
            <div class="form-row">
              <label for="author" class="label">Author</label>
              <input
                id="author"
                name="author"
                type="text"
                required="required"
              />
            </div>
          </div>

          <!-- TO DO: change date input value to show current date -->
          <div class="input-cluster">
            <div class="form-row">
              <label for="start-date" class="label">Started: </label>
              <input
                id="start-date"
                name="start-date"
                type="date"
                value="2021-10-15"
                min="1992-11-16"
                max="2092-11-16"
                required="required"
              />
            </div>
            <div class="form-row">
              <label for="end-date" class="label">Finished: </label>
              <input
                id="end-date"
                name="end-date"
                type="date"
                value="2021-10-15"
                min="1992-11-16"
                max="2092-11-16"
                required="required"
              />
            </div>
          </div>
          <!-- TO DO: add boxes to select from-->
          <div class="form-row">
            <label for="tag" class="label">Tags</label>
            <input id="tags" name="tags" type="checkbox" required="required" />
          </div>
          <div class="form-row">
            <label for="blog-content" class="label"
              >Your Thoughts on the Book:</label
            >
            <textarea id="blog-content" name="blog-content" required="required">
            </textarea>
          </div>

          <div class="form-row form-button">
            <button id="post-new-blog-button">Post!</button>
          </div>
        </div>
      </form>
    </div>
  </body>
</html>
